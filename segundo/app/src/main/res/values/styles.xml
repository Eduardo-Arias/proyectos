<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverLay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopuOverLay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- ImagesBotton -->
    <style name="imageButtonPrimary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">225dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="imageButtonOptions">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">125dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <!-- textView -->
    <style name="textViewTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/padding_title</item>
        <item name="android:layout_margin">@dimen/margin_title</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="textTitle">
        <item name="android:layout_width">@dimen/width_title</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Large</item>
        <item name="android:padding">@dimen/margin_padding_title</item>
        <item name="android:layout_margin">@dimen/margin_padding_title</item>
        <item name="android:textSize">@dimen/textSize_title</item>
        <item name="android:background">#8e9ab7ed</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="text_familia">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">italic</item>
        <item name="android:testOnly">true</item>
    </style>

    <style name="tx_profeciones">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/white_solid</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="tx_colores">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40dp</item>
        <item name="android:background">@drawable/shape_white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!-- ImageView Style -->
    <style name="imageScroll">
        <item name="android:layout_width">@dimen/imageScrollSize</item>
        <item name="android:layout_height">@dimen/imageScrollSize</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_margin">@dimen/margin_padding_ImageScroll</item>
        <item name="android:padding">@dimen/margin_padding_ImageScroll</item>
    </style>

    <style name="iv_image_menu">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="imagelogin">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:padding">@dimen/margin_padding_ImageScroll</item>
    </style>

    <style name="iv_profeciones">
        <item name="android:layout_width">275dp</item>
        <item name="android:layout_height">275dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="iv_numeros_moviles">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="iv_abecedario">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">25dp</item>
    </style>

    <style name="iv_colores">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="iv_meses">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">center</item>
    </style>

    <!-- LinearLayout-->
    <style name="arbol_genealogico">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Buttons -->
    <style name="buttonContinuos">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">#4FC2FB</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:bottomRightRadius">15dp</item>
    </style>

    <style name="buttonPlay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">#4FC2FB</item>
    </style>

    <style name="bt_inicio">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="bt_registro">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@color/yellow</item>
    </style>

    <style name="bt_continuar_regresar">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white_solid</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- EditText -->
    <style name="ed_registros">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
