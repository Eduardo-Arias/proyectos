<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dog_correct"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/granja"
    tools:context=".animales.DogCorrectActivity">

    <TextView
        style="@style/textViewTitle"
        android:text="@string/como_se_dice"
        android:id="@+id/tv_resp"/>

    <ImageButton
        style="@style/imageButtonPrimary"
        android:background="@drawable/puerquito"
        android:id="@+id/ibt_res_pig"
        android:layout_below="@+id/tv_resp"/>
    <Button
        style="@style/buttonContinuos"
        android:text="@string/has_acabado"
        android:layout_alignRight="@id/ibt_res_pig"
        android:layout_below="@id/ibt_res_pig"
        android:id="@+id/bt_cont_pig"/>
    </RelativeLayout>
