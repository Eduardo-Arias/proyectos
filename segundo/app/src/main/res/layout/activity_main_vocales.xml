<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mx.edu.utng.vowels.MainActivity"
    android:background="@drawable/fondos">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vowels"
        android:textStyle="bold"
        android:textSize="90dp"
        android:id="@+id/textView"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/iv_a"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:textColor="#810911"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/a"
        android:id="@+id/iv_a"
        android:pointerIcon="none"
        android:elevation="0dp"
        android:layout_marginStart="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/u"
        android:id="@+id/iv_u"
        android:layout_below="@+id/iv_e"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="14dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/e"
        android:id="@+id/iv_e"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/iv_a"
        android:layout_marginStart="12dp" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/i"
        android:id="@+id/iv_i"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/iv_e" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/o"
        android:id="@+id/iv_o"
        android:layout_below="@+id/iv_e"
        android:layout_toStartOf="@+id/iv_u" />

</RelativeLayout>
