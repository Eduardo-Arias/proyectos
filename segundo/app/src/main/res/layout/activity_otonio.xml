<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/fondo_otonio"
    tools:context="com.jjsoluciones.segundosprint.anio.OtonioActivity">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    style="@style/imageScroll"
                    android:id="@+id/iv_cometa"
                    android:background="@drawable/cometa"/>

                <ImageView
                    style="@style/imageScroll"
                    android:id="@+id/iv_patinar"
                    android:background="@drawable/patinar"/>
                <ImageView
                    style="@style/imageScroll"
                    android:id="@+id/iv_columpio"
                    android:background="@drawable/columpiarce"/>
                <ImageView
                    style="@style/imageScroll"
                    android:id="@+id/iv_nadar3"
                    android:background="@drawable/nadar"/>
                <ImageView
                    style="@style/imageScroll"
                    android:id="@+id/iv_patinar1"
                    android:background="@drawable/patinaje_hielo"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_contenedor"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_papalote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_viento"
                        style="@style/imageScroll"
                        android:background="@drawable/viento"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_patinar_otonio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="30dp">

                    <ImageView
                        style="@style/imageScroll"
                        android:id="@+id/iv_patineta"
                        android:background="@drawable/patin"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_columpio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="30dp">

                    <ImageView
                        android:id="@+id/iv_arbol"
                        style="@style/imageScroll"
                        android:background="@drawable/arbol"/>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</LinearLayout>
