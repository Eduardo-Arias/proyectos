<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/casa_interior"
    tools:context=".animales.CatActivity">
    <ImageButton
        style="@style/imageButtonPrimary"
        android:id="@+id/ibt_cat_dess"
        android:background="@drawable/poker"
        android:scaleType="centerInside"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ibt_cat_dess"
        android:layout_marginTop="20dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/ibt_frog"
                    android:background="@drawable/ranita"
                    style="@style/imageButtonOptions"
                    android:layout_width="match_parent" />

                <ImageButton
                    android:id="@+id/ibt_dog"
                    android:background="@drawable/dog"
                    style="@style/imageButtonOptions"
                    android:layout_width="match_parent" />

                <ImageButton
                    style="@style/imageButtonOptions"
                    android:id="@+id/ibt_cat"
                    android:background="@drawable/gato"
                    android:layout_width="match_parent" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>
