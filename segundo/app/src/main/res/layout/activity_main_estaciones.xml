<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_estaciones"
    tools:context=".anio.MainEstaciones">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:background="@drawable/primavera"
            android:id="@+id/iv_primavera"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:background="@drawable/verano"
            android:id="@+id/iv_verano"
            android:layout_toRightOf="@+id/iv_primavera"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/otonio"
            android:id="@+id/iv_otonio"
            android:layout_below="@+id/iv_primavera"
            android:layout_toRightOf="@+id/iv_invierno"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/invierno"
            android:id="@+id/iv_invierno"
            android:layout_below="@+id/iv_verano"/>

</RelativeLayout>