<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fondo_mes"
    tools:context=".meses.ActivityMonths">

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <ImageButton
                style="@style/iv_meses"
                android:background="@drawable/january"
                android:id="@+id/ibt_january"/>

            <ImageButton
                style="@style/iv_meses"
                android:background="@drawable/february"
                android:id="@+id/ibt_february"/>

            <ImageButton
                style="@style/iv_meses"
                android:background="@drawable/march"
                android:id="@+id/ibt_march"/>


            <ImageButton
                style="@style/iv_meses"
                android:background="@drawable/april"
                android:id="@+id/ibt_april"/>

            <ImageButton
                style="@style/iv_meses"
                android:background="@drawable/may"
                android:id="@+id/ibt_may"/>

            <ImageButton
                style="@style/iv_meses"
                android:background="@drawable/june"
                android:id="@+id/ibt_june"
                android:scaleType="fitCenter"/>

            <ImageButton
                style="@style/iv_meses"
                android:background="@drawable/july"
                android:id="@+id/ibt_july"/>

            <ImageButton
                style="@style/iv_meses"
                android:background="@drawable/august"
                android:id="@+id/ibt_august"/>

            <ImageButton
                style="@style/iv_meses"
                android:background="@drawable/september"
                android:id="@+id/ibt_september"/>

            <ImageButton
                style="@style/iv_meses"
                android:background="@drawable/october"
                android:id="@+id/ibt_october"/>

            <ImageButton
                style="@style/iv_meses"
                android:background="@drawable/november"
                android:id="@+id/ibt_november"/>

            <ImageButton
                style="@style/iv_meses"
                android:background="@drawable/december"
                android:id="@+id/ibt_december"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>








